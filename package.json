{
  "name": "shopping-app-restful-api",
  "version": "1.24.0",
  "description": "A restful api backend for shpopping app. currently designed for a restaurant, but can easily be customized for other products",
  "main": "index.js",
  "scripts": {
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "deploy:prod": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "deploy:dev": "npm run build && pm2 start ecosystem.config.js --only dev",
    "dev": "cross-env NODE_ENV=development nodemon",
    "format": "prettier --write src",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:ci": "jest --forceExit --detectOpenHandles --ci --forceExit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/fabrigeas1/shopping-app-restful-api.git"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "jest",
    "typescript"
  ],
  "author": "Fabrice Feugang Kemegni",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://gitlab.com/fabrigeas1/shopping-app-restful-api/issues"
  },
  "homepage": "https://gitlab.com/fabrigeas1/shopping-app-restful-api#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "formidable": "^2.1.1",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.36",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-commit-msg-linter": "^4.7.4",
    "grunt-shell": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^3.14.2"
  }
}
